{
  "name": "timerjobs",
  "version": "0.0.0-development",
  "description": "TimerJobs is a simple way to create recurring tasks that can react to events.",
  "main": "dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "tsc": "tsc",
    "compile": "tsc -d",
    "coverage:check": "nyc check-coverage",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov",
    "coverage:post": "codecov",
    "coverage:test": "nyc mocha --require source-map-support/register test/*.spec.js",
    "nyc": "nyc",
    "test:coverage": "npm run coverage:test",
    "precommit": "npm run coverage:test && npm run coverage:check",
    "prepush": "npm run coverage:test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "semantic:cli": "semantic-release-cli",
    "publish": "npx semantic-release",
    "test": "mocha -R spec ./test/",
    "tslint": "tslint",
    "travis-deploy-once": "travis-deploy-once"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "eventemitter2": "^5.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.6",
    "chai": "^4.1.2",
    "codecov": "^3.0.4",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.1.0",
    "husky": "^1.3.1",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "semantic-release": "^15.7.1",
    "semantic-release-cli": "^4.1.1",
    "source-map-support": "^0.5.11",
    "travis-deploy-once": "^5.0.11",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "typescript": "^3.3.4000"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jfrazx/TimerJobs.git"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "timer",
    "task",
    "job",
    "event",
    "recurring",
    "setTimeout",
    "setInterval"
  ],
  "author": "jfrazx",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jfrazx/TimerJobs/issues"
  },
  "homepage": "https://github.com/jfrazx/TimerJobs#readme"
}

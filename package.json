{
  "name": "timerjobs",
  "version": "0.0.0-development",
  "description": "TimerJobs is a simple way to create recurring tasks that can react to events.",
  "main": "dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "precompile": "rimraf dist",
    "compile": "tsc -d",
    "coverage:check": "nyc check-coverage",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov",
    "coverage:post": "codecov",
    "coverage:test": "nyc mocha",
    "nyc": "nyc",
    "test:coverage": "npm run coverage:test",
    "precommit": "npm run coverage:test && npm run coverage:check",
    "prepush": "npm run coverage:test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "semantic:cli": "semantic-release-cli",
    "publish": "npx semantic-release",
    "test": "mocha",
    "tslint": "tslint",
    "travis-deploy-once": "travis-deploy-once"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "eventemitter2": "^6.3.1"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^6.0.1",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.0.27",
    "@types/sinonjs__fake-timers": "^6.0.1",
    "@typescript-eslint/parser": "^3.8.0",
    "chai": "^4.1.2",
    "codecov": "^3.0.4",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^7.6.0",
    "husky": "^4.2.5",
    "mocha": "^8.1.1",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.0",
    "semantic-release": "^17.0.7",
    "semantic-release-cli": "^5.2.1",
    "source-map-support": "^0.5.11",
    "travis-deploy-once": "^5.0.11",
    "ts-node": "^8.0.3",
    "typescript": "^3.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jfrazx/TimerJobs.git"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "timer",
    "task",
    "job",
    "event",
    "recurring",
    "setTimeout",
    "setInterval"
  ],
  "author": "jfrazx",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jfrazx/TimerJobs/issues"
  },
  "homepage": "https://github.com/jfrazx/TimerJobs#readme",
  "mocha": {
    "recursive": true,
    "spec": "test/*.ts",
    "reporter": "spec",
    "require": [
      "ts-node/register/transpile-only",
      "source-map-support/register"
    ]
  }
}
